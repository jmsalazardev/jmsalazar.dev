{% set navPages = collections.all | eleventyNavigation(locale.lang + "-home") %}

<nav 
  x-data="navigation" 
  class="flex items-center justify-between flex-wrap p-4 fixed w-full z-10 top-0" 
  @keydown.escape="open = false" 
  :class="{ 'shadow-lg bg-gray-900' : open , 'bg-gray-800' : !open}">

  <!--Toggle button (hidden on large screens)-->
  <div class="flex items-center flex-shrink-0 text-white mr-6">
    <button type="button" aria-label="Toggle navigation" @click="toggle" class="block lg:hidden px-2 text-gray-500 hover:text-white focus:outline-none focus:text-white" :class="{ 'transition transform-180': open }">

      <svg class="h-6 w-6 fill-current" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24">
        <path x-show="!open" fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h6a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path>
        <path x-show="open" fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
      </svg>
    </button>
    <a href="{{ site.url  | url }}" class="text-white no-underline hover:text-white hover:no-underline">
      <span class="text-2xl pl-2">
        <i class="em em-grinning"></i>
        {{ site.name }} 
      </a>
    </div>


    <!--Menu-->
    <div class="w-full flex-grow lg:flex lg:items-center lg:w-auto" x-transition
      :class="{ 'block shadow-3xl': open, 'hidden': !open }"

    >
      <ul class="pt-6 lg:pt-0 list-reset lg:flex justify-end flex-1 items-center">

        {%- for entry in navPages %}
          <li class="mr-3">
            {%- if entry.key == page.collection -%}
              <a href="{{ entry.url | url }}" @click="open = false" class="inline-block py-2 px-4 text-white no-underline" aria-current="page">{{ entry.title }}</a>

            {%- else -%}
              <a href="{{ entry.url | url }}" @click="open = false" class="inline-block text-gray-300 no-underline hover:text-gray-200 hover:text-underline py-2 px-4">{{ entry.title }}</a>
            {%- endif -%}
          </li>
        {%- endfor -%}

      </ul>
    </div>


    
  </nav>