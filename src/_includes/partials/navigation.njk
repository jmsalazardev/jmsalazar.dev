<nav
  x-data="navigation"
  class="flex fixed w-full items-center justify-between

    backdrop-blur 
    transition-colors 
    duration-500 
    
    lg:border-b 
    bg-white/90 
    
    px-4
    py-4
    border-b 
    border-slate-900/10 
    dark:border-slate-300/10 
    lg:px-8 
    lg:border-0 
    lg:mx-0
    text-sm 
    leading-6 
    font-semibold 
    text-slate-700 
    dark:text-slate-200
    border-gray-200 
    z-10
    dark:bg-slate-900/75
">
  <div class="flex items-center">
    <button aria-label="Open Menu" class="mr-2" @click="$dispatch('toggle-drawer')">
      <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewbox="0 0 24 24" class="w-8 h-8">
        <path d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
    <div class="flex h-auto mx-auto text-slate-700 dark:text-slate-200 font-bold">      
        {{ "/src/_includes/svg/logo.svg" | svgContents("inline w-6 h-6 rounded-full mr-2") | safe }}
        {{ site.name }}
    </div>
  </div>
  <div class="flex items-center">
    <div class="hidden md:flex md:justify-between md:bg-transparent">

      <button class="flex items-center p-3 font-medium mr-2 text-center  rounded-full  hover:bg-gray-100 hover:text-sky-500 dark:hover:text-sky-400 " @click="toggleTheme">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewbox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path x-show="!isDarkMode()" stroke-linecap="round" stroke-linejoin="round" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"/>
          <path x-show="isDarkMode()" stroke-linecap="round" stroke-linejoin="round" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/>
        </svg>
      </button>

    </div>
  </div>

</nav>