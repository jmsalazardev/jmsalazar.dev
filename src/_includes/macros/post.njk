{% macro card(post, locale) %}
    
   <div class="max-w-2xl mx-auto overflow-hidden bg-white rounded-lg shadow-md dark:bg-gray-800">
        <img class="object-cover w-full h-48 md:h-64" src="{{ post.data.image }}&amp;class=object-cover w-full h-64 md:h-48&amp;crop=center" alt="{{ post.title }}">

        <div class="p-6">
            <div>
                <span class="text-xs font-medium text-blue-600 uppercase dark:text-blue-400">{{ post.data.type | i18n(locale) }}</span>
                <a href="{{ post.url }}" class="block mt-2 text-2xl font-semibold text-gray-800 transition-colors duration-200 transform dark:text-white hover:text-gray-600 hover:underline">{{ post.data.title }}</a>
                <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">{{ post.data.excerpt }}</p>
            </div>

            <div class="mt-4">
                <div class="flex items-center">
                    
                    <span class="mx-1 text-xs text-gray-600 dark:text-gray-300">{{post.data.date | readableDate}}</span>
                </div>
            </div>
        </div>
        <div class="h-4 min-h-full mt-auto"></div>
    </div>

{% endmacro %}
