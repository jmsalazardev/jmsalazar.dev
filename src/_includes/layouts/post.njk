---
layout: layouts/base 
tmplClass: post
---

{% import "macros/post.njk" as post %}

<main class="flex flex-wrap pt-24 px-4 mx-auto overflow-hidden shadow sm:w-10/12 md:w-10/12 lg:w-8/12">
    {% include "partials/breadcrumb.njk" %}
    <article class="w-full prose dark:prose-invert md:prose-lg lg:prose-xl">
        <header class="pt-2">
            <h1>{{ title }}</h1>
            <p class="py-2">{{ excerpt }}</p>
            <img class="object-cover w-full shadow-lg rounded-lg mb-6" src="{{ image }}&amp;class=thumbnail&amp;crop=center" alt="{{ title }}">

            <div class="py-2">
                <div class="flex items-center">
                    <span class="mx-1 text-xs text-gray-600 dark:text-gray-300">{{date | readableDate}}</span>
                    <span class="mx-1 text-xs text-gray-600 dark:text-gray-300">â€¢</span>
                    <span class="mx-1 text-xs text-gray-600 dark:text-gray-300">@{{ author }}</span>
                </div>
            </div>
        </header>

        <div class="post-content">
            {%- if toc -%}
                {{ content | toc({wrapper: 'nav', wrapperClass: 'toc', headingText: 'Contenidos', headingTag: 'h2'}) | safe }}
            {%- endif -%}
            {{ content | safe}}
        </div>

        <footer class="py-6" id="disqus_thread" x-data="comments" x-intersect.once="load"></footer>
    </article>
</main>