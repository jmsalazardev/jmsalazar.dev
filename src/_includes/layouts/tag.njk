--- 
layout: layouts/base
tmplClass: tags
---

{% import "macros/tag.njk" as tagMacro %}

<main class="flex-auto">
  <div class="mx-auto w-full h-16 md:h-20"></div>
    <header class="mb-8 bg-indigo-700">
      <div class="py-8 md:py-16 lg:py-24">
        <h1 class="text-center text-3xl text-gray-50">{{ title }}</h1>
        <p class="text-center py-2 text-gray-200">{{ excerpt }}</p>
      </div>
    </header>
    
  <div class="mx-auto flex max-w-7xl px-4 mb-8 ">

    <ul class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-2">
      {% for item in collections[collection]| sort(attribute = 'time') %}
      {% set tagUrl %}/{{ locale.lang}}/tags/{{ item }}/{% endset %}
        <li>       
            <a href="{{ tagUrl | url }}">
                <span class="rounded-md bg-gray-500  text-slate-100 font-bold my-1 mx-4 py-1 px-4">
                  #{{ item }}
                </span>
            </a>
        </li>
      {% endfor %}
    </ul>

      
    </div>
    {% include "partials/pagination.njk" %}
</main>

