---
layout: layouts/base
tmplClass: posts
---
{% import "macros/post.njk" as post %}

<main class="flex-auto">
  <div class="mx-auto w-full h-16 md:h-20"></div>
    <header class="mb-8 bg-indigo-700">
      <div class="py-8 md:py-16 lg:py-24">
        <h1 class="text-center text-3xl text-gray-50">{{ title }}</h1>
        <p class="text-center py-2 text-gray-200">{{ excerpt }}</p>
      </div>
    </header>
    
  <div class="mx-auto flex flex-row-reverse max-w-7xl px-4 ">


      <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {% for item in pagination.items | sort(attribute = 'time') %}
          <li>
              {{ post.card(item, locale) }}
          </li>
        {% endfor %}
      </ul>

      
    </div>
    {% include "partials/pagination.njk" %}
</main>