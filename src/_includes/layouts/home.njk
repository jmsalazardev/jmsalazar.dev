--- 
layout: layouts/base
tmplClass: home
---

<main class="flex-auto py-8">
  <div class="mx-auto w-full h-24"></div>
  <div class="mx-auto flex flex-row-reverse justify-center">
    <article class="w-full prose dark:prose-invert md:prose-lg lg:prose-xl px-4">

      {{ content | safe}}
      {% if locale %}
      <a href="/{{ locale.lang }}/blog/" class="btn-primary">{{ "common.contents" | i18n(locale) }}</a>
      {% endif %}
    </article>
  </div>

</main>