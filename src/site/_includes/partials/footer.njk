<footer class="flex-auto text-center text-gray-700 dark:text-gray-100 dark:bg-gray-900
border-t border-slate-900/10 dark:border-slate-300/10 py-4 sm:py-12
 ">
    <nav class="flex justify-center py-4">
        <ul class="flex list-none">
            {%- for name, item in metadata.links -%}
                <li>
                    {%- set icon = "/src/site/_includes/svg/" + name + ".svg" -%}
                    <a href="{{ item }}" title="Sígueme en {{ name }}" target="_blank" rel="noopener" class="mr-9 w-full text-gray-700 dark:text-gray-100">
                        {{ icon | svgContents("inline w-5 ") | safe }}
                    </a>
                </li>
            {%- endfor -%}
        </ul>

    </nav>

    <nav class="flex justify-center py-4">
        <ul class="flex flex-row list-none">
            <li class="pr-4">
                <a href="/{{ locale.lang }}/terms/" title="Terms" rel="nofollow" class="w-full text-gray-700 dark:text-gray-100">
                    {{ 'navigation.terms' | i18n(locale) }}
                </a>
            </li>
            <li class="pl-4 border-l border-slate-200 dark:border-slate-200/5">
                <a href="/{{ locale.lang }}/privacy/" title="Privacy" rel="nofollow" class="w-full text-gray-700 dark:text-gray-100">
                    {{ 'navigation.privacy' | i18n(locale) }}
                </a>
            </li>
        </ul>
    </nav>

    <p>Copyright © {{ helpers.currentYear() }} {{ site.name }}</p>

</footer>