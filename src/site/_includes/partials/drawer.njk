{% set navPages = collections.all | eleventyNavigation(locale.lang) %}

<div x-data="drawer" @toggle-drawer.window="toggle()">
    <div class="z-20 fixed inset-0 transition-opacity" @click="toggle" x-show="isOpen()">
        <div tabindex="0" class="absolute inset-0 bg-black opacity-50"></div>
    </div>
    <aside x-show="isOpen()" :class="isOpen() ? 'translate-x-0' : '-translate-x-full'" class="transform top-0 left-0 w-64 bg-white dark:bg-gray-900 fixed h-full overflow-auto ease-in-out transition-all duration-300 z-30 translate-x-0 ">

        <div class="flex w-full items-center p-5 md:p-7 border-b border-slate-900/10 dark:border-slate-300/10 ">
            <span class="flex h-auto mx-auto text-slate-700 dark:text-slate-200 font-bold">
                {{ "/src/site/_includes/svg/logo.svg" | svgContents("inline w-6 h-6 rounded-full mr-2") | safe }}
                {{ site.name }}
            </span>
        </div>
        
        <a href="/{% if locale %}{{ locale.lang }}/{% endif %}" @click="close()" class="flex items-center p-4 lg:px-8  hover:bg-indigo-500 hover:text-white dark:text-white dark:hover:bg-indigo-600">
            {{ "/src/site/_includes/svg/outline-home.svg" | svgContents("inline w-6 stroke-current stroke-2 mr-2") | safe }}
            {{ "navigation.home" | i18n(locale) }}
        </a>
            

        {%- for entry in navPages %}
            
        <a href="{{ entry.url | url }}" @click="close()" class="flex items-center p-4 lg:px-8  hover:bg-indigo-500 hover:text-white dark:text-white dark:hover:bg-indigo-600">
            {% if entry.icon %}
                {% set icon = "/src/site/_includes/svg/outline-" + entry.icon + ".svg"  %}
                {{ icon | svgContents("inline w-6 stroke-current stroke-2 mr-2") | safe }}
            {% endif %}
            {{ entry.title }}
        </a>
            
        {%- endfor -%}

        <div class="fixed bottom-0 w-full"></div>
    </aside>
</div>