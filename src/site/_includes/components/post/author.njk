 <div class="flex items-center space-x-4 py-4 not-prose">
    <img class="w-10 h-10 rounded-full" src="{{ props.avatar }}#width=80&height=80" alt="{{ props.name }}">
    <div class="space-y-1 font-medium text-gray-700 dark:text-white">
        <div class="text-highlight">{{ props.name}}</div>
        <div class="flex space-x-4">
            {% for item in props.links %}
                <a href="{{ item.link }}" title="{{ 'navigation.follow-me-on' | i18n(locale) }} {{ item.label }}" class="text-sm text-gray-500 hover:text-gray-600 dark:text-gray-400 dark:hover:text-gray-200 align-middle" rel="noopener" target="_blank">
                {% set icon = "/src/svg/" + item.key + ".svg" %}
                {{ icon | svgContents("dark:fill-white inline w-5 ") | safe }}
                </a>
            {% endfor %}
        </div>
    </div>
</div>