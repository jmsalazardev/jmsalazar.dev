<link href="//www.googletagmanager.com/gtag/js?id={{ id }}" rel="preload" as="script">
<script async src="//www.googletagmanager.com/gtag/js?id={{ id }}"></script>
<script>
    window.dataLayer = window.dataLayer || [];
    function gtag() {
        dataLayer.push(arguments);
    }
    gtag('js', new Date());
    gtag('config', '{{ id }}');
</script>