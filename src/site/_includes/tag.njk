---
layout: base
---
{%- from "components/page/macro.njk" import header -%}
{%- from "components/posts/macro.njk" import card with context -%}

{% set taglist = collections[tag] %}
{% set tagTitle %}tags.{{tag}}.title{% endset %}
{% set tagDescription %}tags.{{tag}}.description{% endset %}

<main class="flex-auto">
  <div class="mx-auto w-full h-16 md:h-20"></div>
    
    {{ header({
        title: tagTitle | i18n(locale),
        description: tagDescription | i18n(locale),
        bg: bg}) }}

    
  <div class="mx-auto justify-center flex flex-row-reverse max-w-7xl px-4 mb-12 ">
      <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      {% for item in taglist | sort(attribute = 'time') %}
        {% if  item.data.locale.lang === locale.lang %}
        <li>
            {{ card(item, locale) }}
        </li>
        {% endif %}
      {% endfor %}
    </ul>
    </div>

</main>
