noindex: true 
permalink: "/sitemap.xml"
---
<?xml version="1.0" encoding="utf-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {%- for page in collections.all -%}
        {%- if not page.data.noindex and not page.data.draft and page.data.layout == "post" -%}
            {%- if page.url -%}
                {%- set fullUrl -%}{{ site.url }}{{ page.url }}{%- endset -%}
                {%- set lastmod = page.data.date -%}
                {%- if page.data.lastmod -%}
                    {%- set lastmod = page.data.lastmod -%}
                {%- endif -%}
    <url>
        <loc>{{ fullUrl }}</loc>
        <lastmod>{{ lastmod | htmlDateString }}</lastmod>
    </url>
            {%- endif -%}
        {%- endif -%}
    {%- endfor -%}
    
</urlset>
