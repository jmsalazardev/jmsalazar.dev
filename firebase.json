{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "i18n": {
      "root": "/localized" 
    },
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Content-Security-Policy",
            "value": "default-src 'self'; script-src https://jmsalazar.dev"
          },
          {
            "key": "Content-Security-Policy",
            "value": "script-src https://jmsalazar.dev *.disqus.com *.google-analytics.com *.google.com *.googleapis.com"
          },
          {
            "key": "Content-Security-Policy",
            "value": "style-src https://jmsalazar.dev *.disqus.com *.google.com *.googleapis.com *.googleadservices.com"
          },
          {
            "key": "Content-Security-Policy",
            "value": "img-src https://jmsalazar.dev *.disquscdn.com *.disqus.com *.googleusercontent.com *.google-analytics.com *.google.com *.gstatic.com googleads.g.doubleclick.net"
          },
          {
            "key": "Content-Security-Policy",
            "value": "font-src https://jmsalazar.dev *.disquscdn.com *.disqus.com *.gstatic.com data:"
          },
          {
            "key": "Content-Security-Policy",
            "value": "connect-src https://jmsalazar.dev *.disqus.com *.google-analytics.com *.analytics.google.com"
          }
        ]
      }
    ]
  }
}